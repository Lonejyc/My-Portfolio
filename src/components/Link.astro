---
interface Props {
	name: string;
	link?: string;
}

const { name, link} = Astro.props;
---

<a class="link" href={link} target="_blank"><slot />{name}</a>

<style>
	.link {
		display: flex;
		padding: 0.5rem 1rem;
		gap: 0.5rem;
		width: fit-content;
		color: var(--text-color);
		background-image: var(--gradient-1-double);
		background-size: 200% auto;
		border-radius: 999rem;
		font-size: var(--text-sm);
		line-height: 1.35;
		white-space: nowrap;
		transition: 0.5s ease-out;
		&:hover {
			cursor: pointer;
			background-position: right center;
		}
	}
</style>